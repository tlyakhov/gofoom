    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/editor"
        },
        {
            "name": "Launch Game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-gcflags=-B",
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game"
        },
        {
            "name": "Convert Worlds",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-gcflags=-B",
            "program": "${workspaceFolder}/tools/world_converter",
            "cwd": "${workspaceFolder}",
            "args": [
                "--input=data/oldworlds/*.json"
            ]
        },
        {
            "name": "Profile Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "-cpuprofile=editor.prof"
            ],
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/editor"
        },
        {
            "name": "Profile Game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-gcflags=-B",
            "args": [
                "-cpuprofile=game.prof"
            ],
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game"
        }
    ]
}