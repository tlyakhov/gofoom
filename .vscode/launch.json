    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/editor"
        },
        {
            "name": "Launch Editor [check for races]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-race",
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/editor-races"
        },
        {
            "name": "Launch Game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game",
            "env": {
                "GOFLAGS": "-pgo=${workspaceFolder}/game.pgo"
              }
        },
        {
            "name": "Launch Game [check for races]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-race",
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game-races"
        },
        {
            "name": "Convert Worlds",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/tools/world_converter",
            "cwd": "${workspaceFolder}",
            "args": [
                "--input=data/oldworlds/*.json"
            ]
        },
        {
            "name": "Profile Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "-cpuprofile=./bin/editor.prof"
            ],
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/editor-prof"
        },
        {
            "name": "Profile Game (CPU)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "-cpuprofile=./bin/game.prof"
            ],
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game-prof"
        },
        {
            "name": "Profile Game (Heap)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "-memprofile=./bin/game.prof"
            ],
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/game-prof"
        }
    ]
}