{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    },
    {
      "name": "Launch Editor",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/editor/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/editor"
    },
    {
      "name": "Launch Editor [check for races]",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": "-race",
      "program": "${workspaceFolder}/editor/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/editor-races"
    },
    {
      "name": "Launch Game",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/game/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/game",
      "env": {
        "GOFLAGS": "-pgo=${workspaceFolder}/game.pgo"
      }
    },
    {
      "name": "Launch Game [check for races]",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": "-race",
      "program": "${workspaceFolder}/game/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/game-races"
    },
    {
      "name": "Profile Editor",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "args": ["-cpuprofile=./bin/editor.prof"],
      "program": "${workspaceFolder}/editor/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/editor-prof"
    },
    {
      "name": "Profile Game (CPU)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "args": ["-cpuprofile=./bin/game.prof"],
      "program": "${workspaceFolder}/game/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/game-prof"
    },
    {
      "name": "Profile Game (Heap)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "args": ["-memprofile=./bin/game.prof"],
      "program": "${workspaceFolder}/game/",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/bin/game-prof"
    },
    {
      "name": "Debug generator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/ecs/cmd/gofoom_ecs_generator",
      "cwd": "${workspaceFolder}/components/",
      "output": "${workspaceFolder}/bin/gofoom_ecs_generator",
      "args": ["."]
    },
    {
      "name": "Debug audio",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/components/audio/cmd",
      "cwd": "${workspaceFolder}/",
      "output": "${workspaceFolder}/bin/audio_debug",
      "args": []
      /*   "env": {
        "CGO_CFLAGS": "-I/opt/local/include",
        "CGO_LDFLAGS": "-L/opt/local/lib -lopenal"
      }*/
    }
  ]
}
