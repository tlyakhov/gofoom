    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Profile Editor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": ["-cpuprofile=editor.prof"],
            "program": "${workspaceFolder}/editor/",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Profile Game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": ["-cpuprofile=game.prof"],
            "program": "${workspaceFolder}/game/",
            "cwd": "${workspaceFolder}"
        }
    ]
}